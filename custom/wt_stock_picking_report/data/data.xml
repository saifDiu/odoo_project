<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_lowmargin" model="report.paperformat">
            <field name="name">Custom for footer</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
    </record>

    <record id="my_new_paper_format" model="report.paperformat">
        <field name="name">Custom paperformat for purchase</field>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">70</field>
        <field name="margin_bottom">40</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">55</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(6, 0, [ref('purchase.action_report_purchase_order'), ref('purchase.report_purchase_quotation')])]"/>
    </record>

</odoo>
